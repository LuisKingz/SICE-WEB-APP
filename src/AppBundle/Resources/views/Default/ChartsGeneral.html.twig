        <script type="text/javascript">
            google.charts.load("current", {packages: ['corechart']});
            google.charts.setOnLoadCallback(drawChart);

            function drawChart() {

                let array = document.querySelector('#some-link').dataset.id;
                array = JSON.parse(array);

                var data = new google.visualization.DataTable();

                data.addColumn('string', 'Equipo');
                data.addColumn('number', 'Prestamos');
                data.addColumn({role: "style"});
                data.addColumn({role: "annotation"});

                console.log(array);

                for (var i = 0; i < array.length; i++) {
                    tipoequipo = array[i].tipoequipo;
                    count = parseInt(array[i].CO);
                    annotation = "✔";
                    data.addRow([tipoequipo, count, 'stroke-color: #008569; stroke-width: 2; fill-color: #00ae89', annotation]);
                }

                var view = new google.visualization.DataView(data);
                view.setColumns([
                    0, 1, {
                        calc: "stringify",
                        sourceColumn: 3,
                        type: "string",
                        role: "annotation"
                    },
                    2
                ]);

                var options = {
                    title: "",
                    colors: ['#e4e3e3', '#84a9ac', '#3b6978', '#204051', '#e7dfd5', '#3ca59d', '#596e79', '#596e79', '#336d88'],
                    width: '100%',
                    height: '550',
                    bar: {
                        groupWidth: "50%"
                    },
                    legend: {
                        //color: '#00ae89',
                        position: "bottom",
                        textStyle: {
                            fontName: 'Montserrat,sans-serif'
                        }
                    },
                    annotations: {
                        alwaysOutside: true
                    },
                    vAxis: {
                        minValue: 0
                    }
                };
                if (data.getNumberOfRows() === 0) {
                    $('#create_pdf').attr('disabled', true);
                    $('#columnchart_values2').attr('hidden', true);
                } else {
                    $('#alerta').attr('hidden', true)
                }
                var chart_div = document.getElementById('columnchart_values');
                var chart = new google.visualization.PieChart(chart_div);
                var chartWeb = new google.visualization.PieChart(document.getElementById('columnchart_values2'));

                google.visualization.events.addListener(chart, 'ready', function () {
                    chart_div.innerHTML = '<img style="display:none" src="' + chart.getImageURI() + '" class="img-responsive">';
                    console.log(chart_div.innerHTML);
                });
                chart.draw(view, options);
                chartWeb.draw(view, options);

            {# function resizeHandler() {
                 chart.draw(view, options);
                 chartWeb.draw(view, options);
             }
             if (window.addEventListener) {
                 window.addEventListener('resize', resizeHandler, false);
             } else if (window.attachEvent) {
                 window.attachEvent('onresize', resizeHandler);
             }#}

                 }
